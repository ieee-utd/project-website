{
  "name": "project-website",
  "version": "1.0.0",
  "description": "The new IEEE UTD website",
  "repository": "git@github.com:ieee-utd/project-website.git",
  "author": "IEEE UTD Forge<forge@ieeeutd.org>",
  "scripts": {
    "deploy": "yarn build && surge public",
    "build": "rollup -c && cp public/index.html public/404.html",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "validate": "svelte-check",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.+(ts|js)": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "dependencies": {
    "sirv-cli": "^1.0.0",
    "svelte-spa-router": "^3.0.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "eslint": "^7.9.0",
    "lint-staged": "^10.4.0",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "surge": "^0.21.7",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3",
    "yarn": "^1.22.10"
  }
}
